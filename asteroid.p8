pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
px, py = 64, 64
pvel, pdir = 0,0

function _init()
	cls()
end

function _update()
	if(btn(⬅️)) then turn_left() end
	if(btn(➡️)) then turn_right() end
	if(btn(⬆️)) then accel() end
	if(btn(❎)) then fire() end
end

function _draw()
	draw_player()
end

function draw_player()
	rect(px-5,py-5,px+5,py+5,2)
	line(px,py-5,px-5,py-5,7) 
end

