pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
function _init()
	posx = 64
	posy = 64
end

function _update()
	dir = rnd(4)
	if(dir <= 1 and posy > 0) 
		then posy -= 1
	elseif(dir <= 2 and posy < 127) 
		then posy += 1
	elseif(dir <= 3 and posx > 0) 
		then posx -= 1
	elseif(dir <= 4 and posx < 127) 
		then posx += 1
	end
end

function _draw()
	cls()
	circfill(posx,posy,2,8)
	circ(rnd(127), rnd(127), 1, rnd(16))
	circ(rnd(127), rnd(127), 1, rnd(16))
	circ(rnd(127), rnd(127), 1, rnd(16))
	circ(rnd(127), rnd(127), 1, rnd(16))
end
