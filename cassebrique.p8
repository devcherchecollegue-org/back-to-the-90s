pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
-- ball
ball_x  = 64
ball_y  = 100
ball_dx = 1
ball_dy = -1
ball_r  = 2

-- player
px = 52
py = 120
pw = 24
ph = 3
pspeed = 2

function _init()
	cls()
end

function _update()
 -- player update
 if(btn(⬅️) and px > 0) then
 	px-= pspeed
 elseif(btn(➡️) and px < 126-pw) then
  px+= pspeed
 end

 -- ball collision
 if(ball_x <= (1+ball_r) or ball_x >= (126-ball_r)) then
 	ball_dx = -ball_dx
 	sfx(0)
 end
 if(ball_y <= (1+ball_r) or ball_y >= (126-ball_r)) then
 	ball_dy = -ball_dy
 	sfx(0)
 end
  
	ball_x += ball_dx
	ball_y += ball_dy
end

function _draw()
	cls()
	draw_wall()
	draw_player()
	circfill(ball_x, ball_y, 3, 15)
end

function draw_wall()
	line(0,0,0,127,7)
	line(0,0,127,0,7)
	line(127,0,127,127,7)
	--line(0,127,127,127,10)
end

function draw_player()
	rectfill(px,py,px+pw,py+ph,10)
end
